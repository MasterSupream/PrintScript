{
  "buildCommand": "cd client && npm run vercel-build",
  "outputDirectory": "client/build",
  "installCommand": "npm install && cd client && npm install && cd ../server && npm install",
  "functions": {
    "server/index.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/client/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["iad1"]
}